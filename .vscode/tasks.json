{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "bundle exec jekyll s --watch",
            "options": {"cwd": "docs"},
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "sync:assets",
            "type": "shell",
            "command": "./scripts/syncAssets.sh",
            "options": {"cwd": "../"},
            "problemMatcher": []
        },
        {
            "label": "check:links",
            "type": "shell",
            "command": "./scripts/check_links.sh",
            "problemMatcher": []
        },
        {
            "label": "gen:cheatsheet",
            "type": "shell",
            "command": "./scripts/gen-cheatsheet.sh",
            "problemMatcher": []
        }
    ]
}